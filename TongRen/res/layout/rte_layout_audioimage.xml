<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@android:color/white">
<ImageView
    android:id="@+id/icon_audio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:src="@drawable/ic_audio"/>
    <TextView
        android:id="@+id/tv_audio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/icon_audio"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/icon_audio"/>
    <TextView
        android:id="@+id/tv_audio_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon_audio"
        android:layout_toRightOf="@id/icon_audio"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/icon_audio"/>
</RelativeLayout>
