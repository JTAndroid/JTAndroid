<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayoutEdit"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="编辑"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/work_man_line_color"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <!-- 完成 -->
    
    <LinearLayout
        android:id="@+id/LinearLayoutConfirm"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="完成"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/work_man_line_color"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
    
    <!-- 重新开启 -->
    
    <LinearLayout
        android:id="@+id/LinearLayoutReOpen"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="重新开启"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/work_man_line_color"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
    
    <!-- 删除 -->
    
    <LinearLayout
        android:id="@+id/LinearLayoutDel"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="删除"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/work_man_line_color"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
    
    
    <!-- 退出 -->
    
    <LinearLayout
        android:id="@+id/LinearLayoutOut"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="退出"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/work_man_line_color"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
    
    <!-- 举报 -->
    
    <LinearLayout
        android:id="@+id/LinearLayoutReport"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="举报"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/work_man_line_color"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>