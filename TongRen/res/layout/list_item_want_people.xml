<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/commen_list_bg"
    android:gravity="center_vertical"
    android:padding="10dp"
    >
    
    <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/list_item_tagcb_bg_selector"
            android:clickable="false"
            android:focusable="false" />

    <com.tr.ui.widgets.CircleImageView
        android:id="@+id/imageIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@drawable/ic_default_avatar"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_marginLeft="10dp"
        />
    
    
    <TextView
            android:id="@+id/addFriendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/register_add_friend_button_bg"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="＋好友"
            android:padding="5dp"/>

    <TextView
        android:id="@+id/organizationNameTV"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageIv"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="组织" 
        />
    <TextView
        android:id="@+id/peopleNameTv"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageIv"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="人名" 
        />
    
    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_below="@+id/peopleNameTv"
        android:layout_alignLeft="@+id/peopleNameTv"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="公司" 
        android:visibility="gone"
        />
    
    <TextView
        android:id="@+id/companyJob"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/peopleNameTv"
        android:layout_alignLeft="@+id/peopleNameTv"
        android:layout_toLeftOf="@+id/addFriendBtn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:text="职位" 
        />
    
     <TextView
            android:id="@+id/friendStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="5dp"/>
     
     
     

</RelativeLayout>