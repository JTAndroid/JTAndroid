<TextView
        android:id="@+id/telTv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="拨号"
        android:textColor="@color/white" />
</LinearLayout>