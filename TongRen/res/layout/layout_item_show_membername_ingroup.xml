<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_group_show_member_name"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/white" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="@string/group_show_member_name"
        android:textColor="@color/text_flow_content"
        android:textSize="16sp" />

<CheckBox
                android:id="@+id/text_group_show_member_name_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/iphone_checkbox_bg_selector"
                android:button="@null" />
</RelativeLayout>