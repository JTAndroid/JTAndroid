<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/containerLl_big_happy"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/people_text_view_borders"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#E3E3E3" />

        <TextView
            android:id="@+id/collection_big_happy"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#E3E3E3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/duijie"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="对接"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/duijie_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#E3E3E3" />

        <TextView
            android:id="@+id/report_big_happy"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/black"
            android:textSize="16sp"
           />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#E3E3E3" 
           />

        <TextView
            android:id="@+id/combining_data_big_happy"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="合并资料"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#E3E3E3"
            android:visibility="gone" />

        <TextView
            android:id="@+id/invite_to_join_big_happy"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="邀请加入"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"
            />
  <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#E3E3E3" 
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/see_friend_people"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="查看好友主页"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#E3E3E3" 
            />

        <TextView
            android:id="@+id/see_pub_people"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="查看发布人"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>