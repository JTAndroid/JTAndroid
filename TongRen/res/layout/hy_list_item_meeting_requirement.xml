<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/hy_requirment_tv_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hy_requirment_tv_line"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/hy_requirment_iv_logo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hy_icon_meeting_detail_invest" />

        <TextView
            android:id="@+id/hy_requirment_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/hy_requirment_tv_time"
            android:layout_toRightOf="@+id/hy_requirment_iv_logo"
            android:maxEms="8"
            android:singleLine="true"
            android:text=" "
            android:textColor="#1F1F1F"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hy_requirment_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text=" "
            android:textColor="#8D8D8D"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>