<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/NCIMItemLayoutRoot111"
    android:layout_width="fill_parent"
    android:layout_height="60dp" >

    <RelativeLayout
        android:id="@+id/NCIMItemLayoutRoot"
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <com.tr.ui.widgets.CircleImageView
            android:id="@+id/HFI_IMAGE_Head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12.5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_default_avatar" />

        <LinearLayout
            android:id="@+id/GroupListIMItemLayoutHeadRoot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/HFI_IMAGE_Head"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/NC_NAME"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/home_dt_darkgrey_font"
                android:textSize="@dimen/text_size_l" />

            <TextView
                android:id="@+id/NC_SOURCEFROM"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_m" />
        </LinearLayout>

        <TextView
            android:id="@+id/NC_STATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/home_dt_darkgrey_font"
            android:textSize="16dp" />

        <View
            android:id="@+id/glDIVIDEIMAGE_im"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_dividing_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/HFI_IMAGE_Head"
            android:background="#e0e0e0" />

        <!-- 分割线 -->
    </RelativeLayout>

    <!-- 
    <ImageView
        android:id="@+id/glDIVIDEIMAGE_im"
