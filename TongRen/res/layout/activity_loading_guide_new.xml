<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/framelayout"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_pic3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/third_splash_pager"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_pic2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/second_splash_pager"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_pic1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/first_splash_pager"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/splash_music_play"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@null"
        android:src="@drawable/splash_music_play" />

    <ImageView
        android:id="@+id/splash_button"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="68dp"
        android:contentDescription="@null"
        android:src="@drawable/splash_button" />

</FrameLayout>