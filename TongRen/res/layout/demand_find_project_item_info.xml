<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/find_project_ll_top_bot"
        android:paddingLeft="@dimen/find_project_ll_left_right"
        android:paddingRight="@dimen/find_project_ll_left_right"
        android:paddingTop="@dimen/find_project_ll_top_bot" >

        <TextView
            android:id="@+id/investOrFinancingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/find_project_rb_txt_color"
            android:textSize="@dimen/find_project_rb_txt_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/find_project_ll_top"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/needTypeTv1"
                style="@style/txt_style" />

            <View
                android:id="@+id/divisionLineV1"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/find_project_v_top_bot1"
                android:layout_marginLeft="@dimen/find_project_v_left_right"
                android:layout_marginRight="@dimen/find_project_v_left_right"
                android:layout_marginTop="@dimen/find_project_v_top_bot1"
                android:background="@drawable/demand_find_project_item_vertical_line" />

            <TextView
                android:id="@+id/needTypeTv2"
                style="@style/txt_style" />

            <View
                android:id="@+id/divisionLineV2"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/find_project_v_top_bot1"
                android:layout_marginLeft="@dimen/find_project_v_left_right"
                android:layout_marginRight="@dimen/find_project_v_left_right"
                android:layout_marginTop="@dimen/find_project_v_top_bot1"
                android:background="@drawable/demand_find_project_item_vertical_line" />

            <TextView
                android:id="@+id/needTypeTv3"
                style="@style/txt_style" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/find_project_ll_top" >

            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/find_project_txt_color"
                android:textSize="@dimen/find_project_txt_size" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/find_project_txt_gray"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/list_category_divider" />

</LinearLayout>