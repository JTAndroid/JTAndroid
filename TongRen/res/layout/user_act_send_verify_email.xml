<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/reset_password_by_email" />

    <!-- 说明文字 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="验证邮件已发送至"
        android:textColor="#1f1f1f"
        android:textSize="20sp" />

    <!-- 用户 邮箱 -->

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="gintong@163.com"
        android:textColor="#1f1f1f"
        android:textSize="14sp" />

    <!-- 说明文字 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="请到您的邮箱查收并完成验证"
        android:textColor="@color/commen_text_color_1"
        android:textSize="14sp" />

    <Button
        android:id="@+id/confirm"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in"
        android:text="确    定"
        android:textColor="#fff"
        android:textSize="22sp" />
    <!-- 查收邮件 -->

    <TextView
        android:id="@+id/checkEmailTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_btn_bg"
        android:gravity="center"
        android:text="立即查收邮件"
        android:textColor="@color/commen_text_color_3"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- 没有收到邮件操作体积 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="没有收到邮件？"
        android:textColor="@color/commen_text_color_1"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/resendTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/remail_bg"
        android:gravity="center"
        android:text="重新发送邮件"
        android:textColor="@color/commen_text_color_3"
        android:textSize="16sp"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.67" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_lost_bg"
        android:padding="10dp"
        android:text="• 请先检查是否在垃圾邮箱中\n• 如果半小时后还未收到，请尝试重新发送邮件\n• 重新发送邮件后还未收到？请尝试返回上一页更换邮箱\n• 如果一直没有收到，请致电客服4000700011"
        android:textColor="@color/commen_text_color_2"
        android:textSize="12sp"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6.07" />

</LinearLayout>