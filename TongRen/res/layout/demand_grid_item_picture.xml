<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:scaleType="centerCrop"
        android:src="@drawable/demand_defaultimg" />

    <ImageView
        android:id="@+id/shadowIv"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:scaleType="centerCrop"
        android:src="#aa000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/iv2"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="#171818"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shoot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="拍摄照片"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:scaleType="fitXY"
        android:src="@drawable/demand_bigvideo_bg" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv"
        android:layout_margin="4dp"
        android:background="@drawable/demand_check_selector" />

</RelativeLayout>