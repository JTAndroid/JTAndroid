<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hy_activity_main_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#e3e3e3"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="提前"
            android:textColor="#1f1f1f"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/EditTextValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:hint="请先选择单位"
            android:maxLength="2"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="#808080"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:onClick="onLinearTypeClick"
        android:orientation="horizontal"
        android:tag="m" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="分钟"
            android:textColor="#1f1f1f"
            android:textSize="16sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="（0-60）"
            android:layout_weight="1"
            android:textColor="#6c6c6c"
            android:textSize="14sp" />
        
        <ImageView
            android:id="@+id/ImageViewMinute"
            android:layout_width="21dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/work_new_remind_ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:onClick="onLinearTypeClick"
        android:orientation="horizontal"
        android:tag="h" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="小时"
            android:textColor="#1f1f1f"
            android:textSize="16sp" />
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="（0-24）"
            android:textColor="#6c6c6c"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ImageViewHouse"
            android:layout_width="21dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/work_new_remind_ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:onClick="onLinearTypeClick"
        android:orientation="horizontal"
        android:tag="d" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="天    "
            android:textColor="#1f1f1f"
            android:textSize="16sp" />
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="（0-30）"
            android:textColor="#6c6c6c"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ImageViewDay"
            android:layout_width="21dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/work_new_remind_ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/common_bg"
        android:onClick="onLinearTypeClick"
        android:orientation="horizontal"
        android:tag="o" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="不提醒"
            android:textColor="#1f1f1f"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ImageViewNo"
            android:layout_width="21dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/work_new_remind_ok" />
    </LinearLayout>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>