<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  
    <com.tr.ui.widgets.CircleImageView
        android:id="@+id/listview_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_group_default_avatar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        />
    
    <ImageView
        android:id="@+id/listview_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/contactorganizationtag"
        android:layout_toRightOf="@id/listview_iv"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="12dp"/>
    
    <TextView
        android:id="@+id/listview_tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:drawableLeft="@drawable/contactorganizationtag"
        android:drawablePadding="10dp"
        android:textColor="@color/text_black"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/listview_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"/>
    
    <TextView
        android:id="@+id/listview_tv_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_below="@id/listview_tv_company"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/listview_iv"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>
    
    <TextView
        android:id="@+id/listview_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#808080"
        android:layout_toRightOf="@id/listview_tv_region"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/listview_tv_company"
        android:layout_marginTop="5dp"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/listview_iv"/> 
</RelativeLayout>