<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" >

        <ImageView
            android:id="@+id/activity_actiondetail_listviewItem_reviewerIconImg"
            android:layout_width="53dp"
            android:layout_height="53dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/activity_actiondetail_listviewItem_reviewerIconImg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/activity_actiondetail_listviewItem_reviewerNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#5cafdb"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/activity_actiondetail_listviewItem_reviewerTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_actiondetail_listviewItem_reviewerContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textColor="#222a32"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_actiondetail_listviewItem_likeImg"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/icon_like" />

            <TextView
                android:id="@+id/activity_actiondetail_listviewItem_likeNoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@id/activity_actiondetail_listviewItem_likeImg"
                android:textColor="#999999"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#eeeeee" />

</LinearLayout>