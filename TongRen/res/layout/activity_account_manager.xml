<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_base_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff" >

        <RelativeLayout
            android:id="@+id/avatar_rl"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true" >

            <com.tr.ui.widgets.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_default_avatar" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/online" />
        </RelativeLayout>
		<LinearLayout 
		      android:layout_width="fill_parent"
		                  android:layout_toRightOf="@id/avatar_rl"
        android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/my_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="张三"
            android:layout_weight="1"
            android:textColor="#1f1f1f"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/my_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/joint_columntype_select"
            android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/loginOutTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:text="退出当前账号"
        android:textColor="@color/red"
        android:textSize="16sp" />

</LinearLayout>