<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/transparent_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/orgRl"
                android:layout_width="fill_parent"
                android:layout_height="79dp"
                android:background="@drawable/list_item_sociality_selector" >

                <com.tr.ui.widgets.CircleImageView
                    android:id="@+id/orgIv"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/default_org_avatar" />

                <TextView
                    android:id="@+id/orgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/orgIv"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/orgIv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_flow_content"
                    android:textSize="@dimen/text_tongren_size_m" />

                <TextView
                    android:id="@+id/orgCreater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orgName"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/orgIv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_tongren_size_ss" />

                <TextView
                    android:id="@+id/orgCreateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orgName"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/orgCreater"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_tongren_size_ss" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/myTaskRl"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_item_sociality_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="我的任务"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/joint_columntype_select" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/myResourceRl"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_item_sociality_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="我的资源"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/joint_columntype_select" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/myExamineRl"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_item_sociality_selector" >

                    <TextView
                        android:id="@+id/shenpi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="我的审批"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/shenpi"
                        android:background="@drawable/text_circle_bg"
                        android:text="new"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_tongren_size_ss" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/joint_columntype_select" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/myKaoqinRl"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_item_sociality_selector" >

                    <TextView
                        android:id="@+id/kaoqin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="我的考勤"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/kaoqin"
                        android:background="@drawable/text_circle_bg"
                        android:text="new"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_tongren_size_ss" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/joint_columntype_select" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/myOrgRl"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_item_sociality_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="组织概况"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/joint_columntype_select" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="组织简介"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <TextView
                        android:id="@+id/orgInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="组织类型"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <TextView
                        android:id="@+id/orgType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="行业类型"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <TextView
                        android:id="@+id/hyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_listview_dividing_line"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所  在  地"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/text_tongren_size_m" />

                    <TextView
                        android:id="@+id/orgAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:textColor="@color/text_flow_content"
                        android:textSize="@dimen/text_tongren_size_m" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>