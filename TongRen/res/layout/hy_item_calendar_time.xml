<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/hy_itemCalendar_dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="center"
        android:singleLine="true"
        android:text="9月1日"
        android:textColor="#4d4d4d"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="0.3" 
        android:paddingRight="10dp">

        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/hy_itemCalendar_dateStartTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="09:30"
            android:textColor="@color/hy_timeselect_text_color_selector"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/hy_itemCalendar_dateEndTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="09:30"
            android:textColor="@color/hy_timeselect_text_color_selector"
            android:textSize="17sp" />
        
        <ImageView 
            android:id="@+id/addIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:src="@drawable/people_related_res_add_on"
            />
    </LinearLayout>

</LinearLayout>