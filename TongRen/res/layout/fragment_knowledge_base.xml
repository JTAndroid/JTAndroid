<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_form"
    android:padding="0dp" >

    <com.tr.ui.common.view.XListView
        android:id="@+id/mainLv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ffcccccc"
        android:dividerHeight="0.3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <!-- Right Bottom -->

        <com.tr.ui.widgets.MenuItemView
            android:id="@+id/myViewRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp" />

        <RelativeLayout
            android:id="@+id/relLayRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/im_pathmenu_btn" >

            <ImageView
                android:id="@+id/imgPlusRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/im_pathmenu_btn" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>