<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <RelativeLayout
            android:id="@+id/publicRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/publicTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:text="公开(所以朋友可见)"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <include layout="@layout/demand_item_division_line" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/privateRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/publicRl"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/privateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:text="私密(仅限自己可见)"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <include layout="@layout/demand_item_division_line" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/portionRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/privateRl"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/portionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:text="部分可见(选中的朋友可见)"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <include layout="@layout/demand_item_division_line" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/refuseRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/portionRl"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/refuseTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:text="不给谁看(选中的朋友不可见)"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <include layout="@layout/demand_item_division_line" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <RadioButton
                    android:id="@+id/publicRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/people_check_the_number"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/privateRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/people_check_the_number"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/portionRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/people_check_the_number"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/refuseRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/people_check_the_number"
                    android:button="@null" />
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>