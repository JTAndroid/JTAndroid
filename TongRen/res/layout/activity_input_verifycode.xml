<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#e3e3e3" />
    <!-- 验证码 -->

    <LinearLayout
        android:id="@+id/vcodeParentLl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal" >

        <!-- 填写验证码 -->

        <EditText
            android:id="@+id/vcodeEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="输入验证码"
            android:paddingTop="12dp"
        	android:paddingLeft="15dp"
        	android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="@color/commen_text_color_1"
            android:textColorHint="@color/commen_text_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
        <!-- 获取验证码 -->

        <TextView
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="#e3e3e3"
            android:padding="13dp" />
        <!-- @color/commen_text_color_3 -->

        <TextView
            android:id="@+id/count_backwards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="26"
            android:textColor="@color/commen_text_color_3"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/vcodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="获取验证码"
            android:textColor="#808080"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

</LinearLayout>