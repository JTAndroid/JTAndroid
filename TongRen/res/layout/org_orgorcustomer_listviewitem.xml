<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/org_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb" >

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/text_black"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_word"
            android:layout_marginTop="0dp"
            android:background="#e3e3e3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        
<CheckBox
        android:id="@+id/selectCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/kno_checkbox_bg" 
         android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
        android:button="@null"
        android:focusable="false"
        android:visibility="gone"
		android:focusableInTouchMode="false"/>
<com.tr.ui.widgets.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/org_iv_headprotrait"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/selectCb"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/default_portrait116" />
        <ImageView
            android:id="@+id/org_iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/org_iv_headprotrait"
            android:src="@drawable/contactclienttag" />

        <TextView
            android:id="@+id/org_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/contactclienttag"
            android:drawablePadding="10dp"
            android:layout_toRightOf="@id/org_iv_head"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="asdfasdf"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/org_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/org_tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/org_iv_headprotrait"
            android:visibility="gone"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/org_tv_work"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/org_tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/org_iv_headprotrait"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/mycontacts_message_selector" />

            <ImageView
                android:id="@+id/iv_dial"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mycontacts_dial_selector" />
        </LinearLayout>

        <View
            android:id="@+id/divder_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/org_tv_work"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />
    </RelativeLayout>

</LinearLayout>