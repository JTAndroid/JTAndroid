<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e3e3e3"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:id="@+id/linear_markey_wheel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            >
		
            <NumberPicker
                android:id="@+id/year_markey"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                android:background="#FFF" 
                android:layout_marginLeft="42dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:layout_marginLeft="20.5dp"
                android:layout_marginRight="20.5dp"
                android:textSize="16sp" />

            <NumberPicker
                android:id="@+id/month_markey"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:layout_marginLeft="20.5dp"
                android:layout_marginRight="20.5dp"
                android:textColor="#1f1f1f"
                android:textSize="15sp" />

            <NumberPicker
                android:id="@+id/day_markey"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                android:layout_marginRight="42dp"/>
        </LinearLayout>

</LinearLayout>
