<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/demand_create_item_top"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/hy_icon_meeting_detail_cancel_pressed"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/play_start_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@drawable/recordplay" />

        <SeekBar
            android:id="@+id/play_seekBar"
            android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:thumbOffset="6dp"
            android:thumb="@drawable/progresstrack" />

        <TextView
            android:id="@+id/play_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/demand_text_color" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/demand_line_bg" />

        <ImageView
            android:id="@+id/play_delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/recorddelete" />
    </LinearLayout>

    <TextView
        android:id="@+id/play_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demand_create_item_left1"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="20sp" />

</LinearLayout>