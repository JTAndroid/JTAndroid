<?xml version="1.0" encoding="utf-8"?>
<!-- create by roffee -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hy_label_normal_color"
    android:orientation="vertical"
    android:paddingTop="9dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/hy_layout_picker_1line_images_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hy_label_toscreen_leftright_slide"
            android:text="标题"
            android:textColor="@color/hy_input_title_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hy_layout_picker_1line_images_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/hy_input_title_text_color"
            android:textSize="13sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hy_split_line_height_1"
        android:layout_marginTop="0.5dp"
        android:background="@color/hy_split_line_cc" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="11dp"
        android:paddingRight="9dp"
        android:paddingTop="5dp" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:focusable="false"
            android:overScrollMode="never"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <GridView
                    android:id="@+id/hy_layout_picker_1line_images_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@drawable/hy_selector_listitem_bg"
                    android:scrollbars="none" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>