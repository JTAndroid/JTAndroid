<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeFrgInputLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/projectstatus_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="7dp" >

                <ImageView
                    android:id="@+id/homeFrgPicIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/chat_comment_expression" />
            </RelativeLayout>

            <EditText
                android:id="@+id/homeFrgCommentEt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="63dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/demand_txt_transparency_bg"
                android:maxLines="4"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text=""
                android:textColor="#1f1f1f"
                android:textCursorDrawable="@drawable/ssdk_auth_title_back"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/homeFrgSendCommentIv"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_send_comment"
                    android:text="发布"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/homeBottomView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/commen_list_bottom" />

    <LinearLayout
        android:id="@+id/industrySmileyLL"
        style="@style/layout_item_wfillv"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" >

        <android.support.v4.view.ViewPager
            android:id="@+id/industrySmileyPager"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:persistentDrawingCache="animation" >
        </android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/smileyPagerchange"
            style="@style/item_comm"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:contentDescription="@null"
            android:src="@drawable/chat_biaoqing_1" />
    </LinearLayout>

</LinearLayout>