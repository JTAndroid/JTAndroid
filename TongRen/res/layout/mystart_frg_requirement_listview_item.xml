<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mystartLinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jt_list_style"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/txtMystart_listitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/home_dt_darkgrey_font"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtMystartPublishTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/home_dt_font_comment_content"
        android:paddingTop="6dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:text="1小时前"
        android:textSize="14sp" />

    <!-- 分割线 -->

    <ImageView
        android:id="@+id/HFIDIVIDEIMAGE"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jt_dt_line_1" />

</LinearLayout>