<!-- 左侧关系消息 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">
    
    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/chat_time_bg"
        android:textColor="@color/chat_time_font_color"
        android:textSize="@dimen/text_size_ss" 
        android:text="2014-06-25 10:52"/>

<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal" >

    <!-- 头像 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center_horizontal">
	
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp" >
            <ImageView
                android:id="@+id/leftAvatarIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/im_img_user" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@null"
                android:src="@drawable/im_user_avatar_border" />
        </RelativeLayout>

        <TextView
            android:id="@+id/leftUserNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试"
            android:textColor="@color/chat_right_font_color"
            android:textSize="@dimen/text_size_s"
            android:maxEms="5" />
    </LinearLayout>

    <!-- 关系 -->
    <RelativeLayout
        android:id="@+id/leftCnsRl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cns_duifang"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/leftCnsTitle"
                style="@style/item_text_title_black_m"
                android:layout_margin="5dp" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="7px"
                android:background="#ffffc777" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/leftCnsIcon"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:layout_marginLeft="5dp" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/leftCnsName1"
                        style="@style/item_text_title_black_m" />
                    <TextView
                        android:id="@+id/leftCnsName2"
                        style="@style/item_text_title_black_m" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

</LinearLayout>