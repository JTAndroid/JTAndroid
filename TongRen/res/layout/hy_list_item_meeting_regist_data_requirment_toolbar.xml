<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="10dp"
    android:padding="10dp" >

    <TextView
        android:id="@+id/hy_meeting_data_knowledge_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="需求"
        android:textColor="#1f1f1f"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/hy_meeting_data_knowledge_edit_normal"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/hy_meeting_data_knowledge_tv"
        android:background="@drawable/hy_selector_meeting_data_edit"
        android:clickable="true"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@drawable/hy_selector_meeting_data_edit_color"
        android:textSize="12dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/hy_meeting_data_cancel"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/hy_meeting_data_knowledge_tv"
        android:background="@drawable/hy_icon_meeting_data_canel"
        android:text="取消"
        android:textColor="#656565"
        android:textSize="12dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/hy_meeting_data_select"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/hy_meeting_data_cancel"
        android:background="@drawable/hy_icon_meeting_data_ok"
        android:text="选择"
        android:textColor="#656565"
        android:textSize="12dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >

        <ImageView
            android:id="@+id/hy_meeting_data_transmit"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/hy_selector_meeting_detail_transmit"
            android:clickable="true"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/hy_meeting_data_enshrien"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/hy_selector_meeting_data_focus"
            android:clickable="true"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>