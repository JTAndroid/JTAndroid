<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/people_popbox" >

    <TextView
        android:id="@+id/alertdialog_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18.5dp"
        android:layout_marginTop="17.5dp"
        android:text="添加新的身体状况"
        android:textColor="#1f1f1f"
        android:textSize="14sp" />
	<EditText 
	    android:id="@+id/alertdialog_Et"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:hint="请在此处填写"
	    android:textColorHint="#cccccc"
	    android:textSize="13sp"
	    android:paddingLeft="10dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@drawable/people_inputbox"
	    android:layout_marginBottom="15dp"
	     android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<View  
	     android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3"/>
	<LinearLayout 
	     android:layout_width="match_parent"
	     android:orientation="horizontal"
        android:layout_height="44dp">
	    <TextView 
	        android:id="@+id/alertdialog_No"
	        android:layout_weight="1"
	        android:text="取消"
	        android:textColor="#1f1f1f"
			android:textSize="14sp"
	        android:gravity="center"
	         android:layout_width="match_parent"
        android:layout_height="match_parent"/>
	    <View 
	         android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#e3e3e3"/>
	    <TextView 
	        android:id="@+id/alertdialog_Yes"
	        android:layout_weight="1"
	        android:text="确定"
			android:textColor="#1f1f1f"
			android:textSize="14sp"
	         android:gravity="center"
	         android:layout_width="match_parent"
        android:layout_height="match_parent"/>
	</LinearLayout>
</LinearLayout>