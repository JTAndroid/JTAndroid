<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#e3e3e3" />
    <!-- 手机号/邮箱 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <!-- 填写手机号/邮箱 -->

        <com.tr.ui.widgets.AutoCompeleteEmailSuffixEditText
            android:id="@+id/phone_or_email"
            style="@style/common_text_style_large_black"
            android:layout_centerVertical="true"
            android:background="#fff"
            android:hint="手机号/邮箱                                                                                                                                                                          "
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="@color/commen_text_color_1"
            android:textColorHint="@color/commen_text_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/delete_phone_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/delete_input_content"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

</LinearLayout>