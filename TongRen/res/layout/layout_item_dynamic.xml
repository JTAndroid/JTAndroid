<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_dynamic"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/commen_list_bg" >


    <TextView
        android:id="@+id/text_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="@string/my_dynamic"
        android:textColor="@color/text_flow_content"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/image_into_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/arrow_right_grey" />

    <TextView
        android:id="@+id/text_dynamic_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/image_into_dynamic"
        android:textColor="#b6c4c8"
        android:visibility="gone"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>