<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/need_etails_comment_item_top_bot"
        android:paddingLeft="@dimen/need_etails_comment_item_left_right"
        android:paddingRight="@dimen/need_etails_comment_item_left_right"
        android:paddingTop="@dimen/need_etails_comment_item_top_bot" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
			<com.tr.ui.widgets.CircleImageView 
			    android:id="@+id/headIv"
			    android:layout_width="30dip"
                android:layout_height="30dip"
			    />

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f1f1f"
                android:layout_marginLeft="@dimen/need_etails_comment_item_txt_left"
                android:textSize="@dimen/need_etails_comment_item_txt" />
        </LinearLayout>

        <TextView
            android:id="@+id/meVisibleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/need_etails_comment_txt_create_top"
            android:text="您好,该条评论仅创建者可见"
            android:visibility="gone"
            android:textColor="@color/need_etails_comment_txt_create"
            android:textSize="@dimen/need_etails_comment_txt_create" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/need_etails_comment_txt_me"
            android:textColor="@color/need_etails_comment_txt_me" />

        <TextView
            android:id="@+id/commentTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/need_etails_comment_txt_time_top"
            android:textColor="@color/need_etails_comment_txt_time"
            android:textSize="@dimen/need_etails_comment_txt_time" />
    </LinearLayout>
   <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_category_divider" /> 

</LinearLayout>