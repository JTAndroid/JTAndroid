<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hy_itemInvitefriend_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1f1"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topicNameRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/list_item_press_gray_selector"
        android:padding="10dp" >
        <TextView
            android:id="@+id/hy_itemInviteSpeakerEdit_topic_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="议题	"
            android:textColor="#808080"
            android:textSize="@dimen/hy_input_title_text_font" />

        <TextView
            android:id="@+id/topicNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/hy_itemInviteSpeakerEdit_topic_titleText"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:hint="必填"
            android:maxLines="2"
            android:textColor="@color/hy_input_content_text_color"
            android:textColorHint="@color/hy_input_content_text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="iamge"
            android:src="@drawable/arrow_right_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e1e1e1e1" />

    <RelativeLayout
        android:id="@+id/topicTimeRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_press_gray_selector"
        android:clickable="true"
        android:padding="10dp" >

        <TextView
            android:id="@+id/hy_itemInviteSpeakerEdit_topicTime_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="时间	"
            android:textColor="#808080"
            android:textSize="@dimen/hy_input_title_text_font" />

        <TextView
            android:id="@+id/topicTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/hy_itemInviteSpeakerEdit_topicTime_titleText"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/hy_input_content_text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="iamge"
            android:src="@drawable/arrow_right_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e1e1e1e1" />

    <RelativeLayout
        android:id="@+id/topicDescRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_press_gray_selector"
        android:padding="10dp" >

        <TextView
            android:id="@+id/hy_itemInviteSpeakerEdit_topicIntroduce_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="介绍	"
            android:textColor="#808080"
            android:textSize="@dimen/hy_input_title_text_font" />

        <TextView
            android:id="@+id/topicDescTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/hy_itemInviteSpeakerEdit_topicIntroduce_titleText"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:maxLength="255"
            android:singleLine="true"
            android:textColor="@color/hy_input_content_text_color"
            android:textColorHint="@color/hy_input_content_text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="iamge"
            android:src="@drawable/arrow_right_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e1e1e1e1" />

    <com.tr.ui.widgets.DrawableCenterTextView
        android:id="@+id/deleteSpeakTopicBt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8f8"
        android:drawableLeft="@drawable/meetingcancle"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="删除议题"
        android:textColor="@color/text_yellow"
        android:textSize="15sp"
        android:visibility="gone" />

</LinearLayout>