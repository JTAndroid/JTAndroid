<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_apply_verify_titleText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:gravity="center_vertical"
            android:text="2015北京万圣节活动魔夜魅影主题派对"
            android:textColor="#222a32"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="93dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="19dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@drawable/icon_clock2" />

            <TextView
                android:id="@+id/activity_apply_verify_action_startTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#999999"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="-"
                android:textColor="#999999"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/activity_apply_verify_action_endTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#999999"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_pointer2" />

            <TextView
                android:id="@+id/activity_apply_verify_actionLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#999999"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#dedede"
        android:paddingTop="13dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:gravity="center_vertical"
            android:text="验证手机号码"
            android:textColor="#222a32"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#dedede" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="#ffffff" >

        <Button
            android:id="@+id/activity_apply_verify_authCodeBtn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/shape_applyverify_send"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="19dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/activity_apply_verify_authCodeBtn"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/icon_required" />

            <EditText
                android:id="@+id/activity_apply_verify_phoneEdittext"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="7dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:hint="邮箱或者手机"
                android:textColor="#c0c0c0"
                android:textColorHint="#c0c0c0"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53dp"
         android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_required" />

        <EditText
            android:id="@+id/activity_apply_verify_authCodeEdit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="7dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:hint="请输入您收到的验证码"
            android:textColor="#c0c0c0"
            android:textColorHint="#c0c0c0"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53dp"
         android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_required" />

        <EditText
            android:id="@+id/activity_apply_verify_nameEdit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="7dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:hint="姓名"
            android:textColor="#c0c0c0"
            android:textColorHint="#c0c0c0"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        
        android:id="@+id/activity_apply_verify_payBtn"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/shape_pay_sure"
        android:text="支付"
        android:textSize="20sp"
        android:textColor="#ffffff" />

</LinearLayout>