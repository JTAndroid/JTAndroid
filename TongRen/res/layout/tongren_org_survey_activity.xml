<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <include layout="@layout/transparent_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_dividing_line"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/orgTaskRl"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/list_item_sociality_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="组织任务"
                android:textColor="@color/text_flow_content"
                android:textSize="@dimen/text_tongren_size_m" />

            <TextView
                android:id="@+id/orgTaskNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/joint_columntype_select"
                android:textColor="@color/text_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_dividing_line"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/orgResourceRl"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/list_item_sociality_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="组织资源"
                android:textColor="@color/text_flow_content"
                android:textSize="@dimen/text_tongren_size_m" />

            <TextView
                android:id="@+id/orgResourceNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/joint_columntype_select"
                android:textColor="@color/text_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_dividing_line"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/orgMemberRl"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/list_item_sociality_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="组织成员"
                android:textColor="@color/text_flow_content"
                android:textSize="@dimen/text_tongren_size_m" />

            <TextView
                android:id="@+id/orgMemberNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/joint_columntype_select"
                android:textColor="@color/text_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_dividing_line"
            android:background="#e0e0e0" />
    </LinearLayout>

</LinearLayout>