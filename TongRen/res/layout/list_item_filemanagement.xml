<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/fileManage_RL"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginRight="60dp" >

        <ImageView
            android:id="@+id/filemanagement_Iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/filemanagement" />

        <TextView
            android:id="@+id/filemanagement_name_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/filemanagement_Iv"
            android:text="目录名称"
            android:singleLine="true"
            android:textColor="#535353"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filemanagement_name_Tv"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/filemanagement_Iv"
            android:orientation="horizontal"
            android:textColor="#808080"
            android:textSize="13sp" >

            <TextView
                android:id="@+id/filemanagement_date_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="2015-5-22 16:09"
                android:textColor="#808080"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/filemanagement_size_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="2.18M"
                android:textColor="#5276ba"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="66dp"
        android:layout_alignParentRight="true" >

        <CheckBox
            android:id="@+id/filemanagement_select_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/fileManage_RL"
        android:background="#e3e3e3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="#bebebe"
        android:visibility="gone" />

</RelativeLayout>