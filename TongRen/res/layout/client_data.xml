<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:edittextview="http://schemas.android.com/apk/res/com.tr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#22292c" >

        <ImageView
            android:id="@+id/clientdata_rl_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="客户资料"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/client_tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/client_data_main_Ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/client_data_Rl"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="#f1f1f1" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="基本信息"
                            android:textColor="#1f1f1f"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/client_iv_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/org_edit_blue" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/org_line1_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/people_portrait" />
                        
                            <!--  android:layout_centerVertical="true" -->

                        <TextView
                            android:id="@+id/org_line1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:layout_marginTop="13dp"
                            android:layout_marginLeft="48dp"
                            android:layout_toRightOf="@id/org_line1_iv"
                            android:text="客户简称"
                            android:textColor="#808080"
                            android:textSize="14sp" />
                        
                    

                        <TextView
                            android:id="@+id/client_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_marginTop="13dp"
                            android:layout_marginLeft="14dp"
                            android:layout_toRightOf="@id/org_line1_tv"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                        
                        
                        <TextView
                            android:id="@+id/org_alnamne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:layout_marginTop="35dp"
                            android:layout_marginLeft="48dp"
                            android:layout_toRightOf="@id/org_line1_iv"
                            android:text="客户全称"
                            android:textColor="#808080"
                            android:textSize="14sp" />
                        
                    

                        <TextView
                            android:id="@+id/client_all_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_marginTop="35dp"
                            android:layout_toRightOf="@id/org_alnamne"
                            android:layout_marginLeft="14dp"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                        
                        

                        
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/org_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="客户类型"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/client_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="39dp"
                            android:layout_toRightOf="@id/org_type"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/org_industry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="行         业"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/client_industry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="39dp"
                            android:layout_toRightOf="@id/org_industry"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/org_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="上市信息"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/client_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="39dp"
                            android:layout_toRightOf="@id/org_msg"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/org_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="证券代码"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/client_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="39dp"
                            android:layout_toRightOf="@id/org_money"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                    </RelativeLayout>
             
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/org_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="客户邮箱"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/client_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="39dp"
                            android:layout_toRightOf="@id/org_email"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/org_dail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="联系电话"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/client_dial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="39dp"
                            android:layout_toRightOf="@id/org_dail"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />
<!-- 
                    <com.tr.ui.people.cread.view.MyEditTextView
                        android:id="@+id/client_Intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        edittextview:isInput="false"
                        edittextview:text_label="客户描述" /> -->
                        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/clients_Intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="客户描述"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/show_client_Intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="39dp"
                            android:layout_toRightOf="@id/clients_Intro"
                            android:text=""
                            android:textColor="#353535"
                            android:textSize="14sp" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e3e3e3" />

                    <com.tr.ui.people.cread.view.MyEditTextView
                        android:id="@+id/client_Custom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        edittextview:isChoose="true"
                        edittextview:text_label="自定义" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#f1f1f1" />

                    <RelativeLayout
                        android:id="@+id/client_Addmore_Rl"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#ffffff"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="12dp"
                            android:text="选择模块及常用栏目"
                            android:textColor="#1f1f1f"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/right_arrow" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/people_textviewshape"
                    android:drawableLeft="@drawable/people_associate"
                    android:drawablePadding="5dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="14dp"
                    android:text="关联"
                    android:textColor="#1f1f1f"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/people_textviewshape"
                    android:drawableLeft="@drawable/people_contents"
                    android:drawablePadding="5dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="14dp"
                    android:text="目录"
                    android:textColor="#1f1f1f"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/people_textviewshape"
                    android:drawableLeft="@drawable/people_label"
                    android:drawablePadding="5dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="14dp"
                    android:text="标签"
                    android:textColor="#1f1f1f"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/client_access"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/people_textviewshape"
                    android:drawableLeft="@drawable/people_competence"
                    android:drawablePadding="5dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="14dp"
                    android:text="权限"
                    android:textColor="#1f1f1f"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>