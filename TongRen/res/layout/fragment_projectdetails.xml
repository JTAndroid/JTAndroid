<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:edittextview="http://schemas.android.com/apk/res/com.tr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/transparent_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/project_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp" >

                    <TextView
                        android:id="@+id/projectDetailName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/projecttextcolor1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/projectDetailState"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/projectDetailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/projecttextcolor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e3e3e3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/projectDetailValidityKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/p_date"
                        android:drawablePadding="10dp"
                        android:text="需求有效期："
                        android:textColor="@color/projecttextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/projectDetailValidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/projecttextcolor1"
                        android:textSize="14sp" />
                    
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e3e3e3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/p_cycle"
                        android:drawablePadding="10dp"
                        android:text="周期："
                        android:textColor="@color/projecttextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/projectDetailCycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/projecttextcolor1"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e3e3e3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/p_location"
                        android:drawablePadding="10dp"
                        android:text="地域："
                        android:textColor="@color/projecttextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/projectDetailArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/projecttextcolor1"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e3e3e3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/p_industry"
                        android:drawablePadding="10dp"
                        android:text="行业："
                        android:textColor="@color/projecttextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/projectDetailIndustry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/projecttextcolor1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/accessoryLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:paddingBottom="12dp" >

                <TextView
                    android:id="@+id/projectDetail_title"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="项目简介"
                    android:textColor="@color/projecttextcolor1"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e3e3e3" />

                <TextView
                    android:id="@+id/projectDetailIntroduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/projecttextcolor1"
                    android:textSize="14sp" />

                <com.tr.ui.widgets.NoScrollListview
                    android:id="@+id/accessoryLv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </com.tr.ui.widgets.NoScrollListview>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/undertakerMetv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="承接方"
                    android:textColor="@color/projecttextcolor1"
                    android:textSize="@dimen/commen_text_size_14" />

                <TextView
                    android:id="@+id/undertakenNums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/projecttextcolor"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_right_grey" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/undertakenNameLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="18dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="18dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/undertake_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="承接方"
                    android:textColor="@color/projecttextcolor1"
                    android:textSize="@dimen/commen_text_size_14" />

                <TextView
                    android:id="@+id/undertakenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/undertake_title"
                    android:gravity="right"
                    android:paddingLeft="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/projecttextcolor1"
                    android:textSize="@dimen/commen_text_size_14" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/organizatianUndertakenLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/scheduleMetv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="进度"
                            android:textColor="@color/projecttextcolor1"
                            android:textSize="@dimen/commen_text_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:text="查看项目进度"
                            android:textColor="@color/projecttextcolor"
                            android:textSize="@dimen/commen_text_size_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/arrow_right_grey" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/taskMetv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="任务"
                            android:textColor="@color/projecttextcolor1"
                            android:textSize="@dimen/commen_text_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:text="查看项目任务"
                            android:textColor="@color/projecttextcolor"
                            android:textSize="@dimen/commen_text_size_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/arrow_right_grey" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/memberMetv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="成员"
                            android:textColor="@color/projecttextcolor1"
                            android:textSize="@dimen/commen_text_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:text="查看组织成员"
                            android:textColor="@color/projecttextcolor"
                            android:textSize="@dimen/commen_text_size_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/arrow_right_grey" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/documentMetv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="文档"
                            android:textColor="@color/projecttextcolor1"
                            android:textSize="@dimen/commen_text_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:text="查看项目文档"
                            android:textColor="@color/projecttextcolor"
                            android:textSize="@dimen/commen_text_size_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/arrow_right_grey" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/applyUndertakeTv"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/common_margain_left_15"
                android:layout_marginRight="@dimen/common_margain_left_15"
                android:layout_marginTop="@dimen/common_margain_left_18"
                android:layout_marginBottom="@dimen/common_margain_left_15"
                android:background="@drawable/button_project_action_selector"
                android:gravity="center"
                android:text="我要承接"
                android:textColor="#fff"
                android:textSize="@dimen/commen_text_size_14"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>