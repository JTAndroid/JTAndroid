<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/financing_desired_v_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/relevanceLl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/demand_layout_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/financing_desired_padding_top_bot"
            android:paddingTop="@dimen/financing_desired_padding_top_bot" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/demand_relevance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/financing_desired_txt_margin_left"
                android:textColor="#1f1f1f"
                android:text="@string/financing_esired_relevance" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/financing_desired_v_line" />

        <LinearLayout
            android:id="@+id/treeLl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/demand_layout_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/financing_desired_padding_top_bot"
            android:paddingTop="@dimen/financing_desired_padding_top_bot" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/demand_tree_item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f1f1f"
                android:layout_marginLeft="@dimen/financing_desired_txt_margin_left"
                android:text="@string/financing_esired_tree" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/financing_desired_v_line" />

        <LinearLayout
            android:id="@+id/labelLl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/demand_layout_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/financing_desired_padding_top_bot"
            android:paddingTop="@dimen/financing_desired_padding_top_bot" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/demand_label_itme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f1f1f"
                android:layout_marginLeft="@dimen/financing_desired_txt_margin_left"
                android:text="@string/financing_esired_label" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/financing_desired_v_line" />

        <LinearLayout
            android:id="@+id/jurisdictionLl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/demand_layout_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/financing_desired_padding_top_bot"
            android:paddingTop="@dimen/financing_desired_padding_top_bot" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/demand_jurisdiction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f1f1f"
                android:layout_marginLeft="@dimen/financing_desired_txt_margin_left"
                android:text="@string/financing_esired_jurisdiction" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>