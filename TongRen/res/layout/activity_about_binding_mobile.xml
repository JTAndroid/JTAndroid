<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#e3e3e3" />
    <!-- 验证码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_moblie_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:text="新手机号"
            android:textColor="#808080"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_in_moblie_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="输入新手机号"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="@color/commen_text_color_1"
            android:textColorHint="@color/commen_text_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />
    <!-- 填写验证码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_vcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:text="验证码\u3000"
            android:textColor="#808080"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_in_vcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="请输入验证码"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="@color/commen_text_color_1"
            android:textColorHint="@color/commen_text_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
        <!-- 获取验证码 -->

        <TextView
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="#e3e3e3"
            android:padding="13dp" />
        <!-- @color/commen_text_color_3 -->

        <TextView
            android:id="@+id/tv_count_backwards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/commen_text_color_3"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_get_vcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="#808080"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

    <Button
        android:id="@+id/bt_on_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sign_in_normal"
        android:gravity="center"
        android:text="确认更改"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="5dp"
        android:padding="5dp"
        android:text="@string/note"
        android:textColor="#808080"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>