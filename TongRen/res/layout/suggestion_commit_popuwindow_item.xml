<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/suggestion_style_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/know_popu_item"
        android:gravity="center"
        android:textColor="@color/knowledge_popuwindow_tv"
        android:textSize="@dimen/know_popu_fontsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/demand_line_bg" />

</LinearLayout>