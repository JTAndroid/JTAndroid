<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint" />

    <EditText
        android:id="@+id/mobileEt"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#fff"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/text_flow_content"
        android:textColorHint="@color/text_hint"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/vcodeEt"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/text_flow_content"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/getCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="@color/btn_click"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint" />

    <EditText
        android:id="@+id/pwdEt"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#fff"
        android:hint="输入新密码"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/text_flow_content"
        android:textColorHint="@color/text_hint"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint" />

    <TextView
        android:id="@+id/comitTv"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_circle_click"
        android:gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|right"
        android:text="使用邮箱注册用户?"
        android:textColor="@color/btn_click"
        android:textSize="12sp" />

</LinearLayout>