<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hy_activity_main_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#e3e3e3"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:background="@drawable/common_bg"
            android:onClick="onLinearTypeClick"
            android:orientation="horizontal"
            android:tag="0" >

            <ImageView
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_level1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_weight="3"
                android:text="普通"
                android:textColor="#353535"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="21dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/work_new_remind_ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="36dp"
            android:background="#e3e3e3"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:background="@drawable/common_bg"
            android:onClick="onLinearTypeClick"
            android:orientation="horizontal"
            android:tag="3" >

            <ImageView
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_level2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="重要"
                android:textColor="#353535"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ImageView2"
                android:layout_width="21dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/work_new_remind_ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="36dp"
            android:background="#e3e3e3"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:layout_marginTop="1px"
            android:background="@drawable/common_bg"
            android:onClick="onLinearTypeClick"
            android:orientation="horizontal"
            android:tag="1" >

            <ImageView
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_level3" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="非常重要"
                android:textColor="#353535"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ImageView3"
                android:layout_width="21dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/work_new_remind_ok" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>