<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >
    	
      
		<TextView 
    	    android:text="开始时间"
    	    android:textColor="#1f1f1f"
    	    android:textSize="17sp"
    	    android:layout_marginTop="10dp"
    	    android:background="#ffffff"
    	    android:paddingTop="15dp"
    	    android:paddingBottom="15dp"
    	    android:gravity="center"
    	     android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>	
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e3e3e3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <LinearLayout
            android:id="@+id/linear_work_wheel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            >
		
            <NumberPicker
                android:id="@+id/year_start"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                android:background="#FFF" 
                android:layout_marginLeft="42dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:layout_marginLeft="20.5dp"
                android:layout_marginRight="20.5dp"
                android:textSize="16sp" />

            <NumberPicker
                android:id="@+id/month_start"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:layout_marginLeft="20.5dp"
                android:layout_marginRight="20.5dp"
                android:textColor="#1f1f1f"
                android:textSize="15sp" />

            <NumberPicker
                android:id="@+id/day_start"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                android:layout_marginRight="42dp"/>
        </LinearLayout>

	<TextView 
    	    android:text="结束时间"
    	    android:textColor="#1f1f1f"
    	    android:textSize="17sp"
    	    android:background="#ffffff"
    	    android:paddingTop="15dp"
    	    android:paddingBottom="15dp"
    	    android:gravity="center"
    	     android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>	
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e3e3e3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <LinearLayout
            android:id="@+id/linear_work_wheel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            >

            <NumberPicker
                android:id="@+id/year_end"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                android:background="#FFF" 
                android:layout_marginLeft="42dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:layout_marginLeft="20.5dp"
                android:layout_marginRight="20.5dp"
                android:textSize="16sp" />

            <NumberPicker
                android:id="@+id/month_end"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:layout_marginLeft="20.5dp"
                android:layout_marginRight="20.5dp"
                android:textColor="#1f1f1f"
                android:textSize="15sp" />

            <NumberPicker
                android:id="@+id/day_end"
                android:layout_width="62dp"
                android:layout_height="166.5dp"
                android:layout_marginRight="42dp"/>
        </LinearLayout>
</LinearLayout>
