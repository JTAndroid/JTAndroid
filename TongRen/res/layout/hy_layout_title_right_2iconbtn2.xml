<?xml version="1.0" encoding="utf-8"?>
<!-- create by roffee -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hy_title_height"
    android:background="@color/hy_title_bg_color" >

    <LinearLayout
      
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
              android:id="@+id/hy_layoutTitle_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/hy_title_action_bar_to_side"
            android:layout_marginRight="@dimen/hy_title_action_bar_to_side"
            android:background="@drawable/hy_selector_ic_action_back" />
        
    <TextView
        android:id="@+id/hy_layoutTitle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        android:singleLine="true"
        android:text="@string/hy_title"
        android:textColor="#000000"
        android:textSize="@dimen/hy_title_text_font" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/hy_title_action_bar_to_side"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/hy_layoutTitle_rightIconBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/hy_title_action_bar_to_2side"
            android:background="@drawable/hy_selector_ic_action_search"
            android:clickable="true" />

           <ImageView
            android:id="@+id/hy_layoutTitle_rightIconBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hy_selector_ic_action_add"
            android:clickable="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/hy_meeting_shadow"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@drawable/hy_meeting_shadow" />

</FrameLayout>