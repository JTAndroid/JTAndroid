<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <!-- 所有人 -->

    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/choose_jump_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="所有人"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/all_recordCB"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/checkbox_bg_selector"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />
    <!-- 对接的好友 -->

    <RelativeLayout
        android:id="@+id/docking_friends"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/choose_jump_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="对接的好友"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/docking_friends_recordCB"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/checkbox_bg_selector"
            android:button="@null" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />
    <!-- 好友 -->

    <RelativeLayout
        android:id="@+id/my_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/choose_jump_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="好友 "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/my_friend_recordCB"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/checkbox_bg_selector"
            android:button="@null" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />
    <!-- 仅限自己 -->

    <RelativeLayout
        android:id="@+id/only_self"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/choose_jump_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="仅限自己 "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/only_self_recordCB"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/checkbox_bg_selector"
            android:button="@null" />
    </RelativeLayout>

</LinearLayout>