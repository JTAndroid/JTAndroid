<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/hy_relation_tv_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />
    
    <RelativeLayout
        android:id="@+id/relationship_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hy_relation_tv_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        >

        <com.tr.ui.widgets.CircleImageView
            android:id="@+id/hy_relation_iv_avatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:src="@drawable/hy_ic_default_friend_avatar"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/hy_relation_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/hy_relation_iv_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="姓名"
            android:textColor="#1F1F1F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hy_relation_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hy_relation_tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/hy_relation_iv_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="描述"
            android:textColor="#8D8D8D"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hy_right_arrow" />
    </RelativeLayout>

    

</RelativeLayout>