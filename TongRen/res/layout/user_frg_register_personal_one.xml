<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- 用户头像 -->

    <RelativeLayout
        android:id="@+id/avatarParentRl"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp" >

        <com.tr.ui.widgets.CircleImageView
            android:id="@+id/avatarIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_iv" />

        <ProgressBar
            android:id="@+id/loadingPb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- 姓名 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/text_hint" />

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#fff"
        android:hint="填写用户名"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/text_flow_content"
        android:textColorHint="@color/text_hint"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint" />

    <RadioGroup
        android:id="@+id/sexRg"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:paddingLeft="20dp"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/boyRb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/checkbox_style_circle"
            android:text="男"
            android:textColor="@color/text_hint"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/girlRb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:background="@null"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/checkbox_style_circle"
            android:text="女"
            android:textColor="@color/text_hint"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/secretRb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/checkbox_style_circle"
            android:text="保密"
            android:textColor="@color/text_hint"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint" />

    <TextView
        android:id="@+id/nextTv"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_circle_noclick"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="14sp" />

</LinearLayout>