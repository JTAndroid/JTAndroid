<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f4f4f4"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/peoplemumber_propertiesLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="59dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="姓名"
                    android:textColor="#999999"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/peoplemumber_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:textColor="#222a32"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="59dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="手机"
                    android:textColor="#999999"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/peoplemumber_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:textColor="#222a32"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="59dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="邮箱"
                    android:textColor="#999999"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/peoplemumber_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:textColor="#222a32"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="59dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="职位"
                    android:textColor="#999999"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/peoplemumber_position"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:textColor="#222a32"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="59dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="公司"
                    android:textColor="#999999"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/peoplemumber_company"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:textColor="#222a32"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="144dp"
            android:layout_marginTop="13dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="需求标签"
                android:textColor="#999999"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/peoplemumber_needtagLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/peoplemumber_addneedTag"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:background="@drawable/border1"
                        android:gravity="center"
                        android:text="添加"
                        android:textColor="#ffbe6c"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/peoplemumber_editneedTag"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/border2"
                        android:gravity="center"
                        android:text="编辑"
                        android:textColor="#7acdf9"
                        android:textSize="17sp" />
                </LinearLayout>

                <com.tongmeng.alliance.view.MyGridView
                    android:id="@+id/peoplemumber_needGridView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/peoplemumber_needtagLayout"
                    android:layout_alignParentTop="true"
                    android:columnWidth="13dp"
                    android:numColumns="5" >
                </com.tongmeng.alliance.view.MyGridView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="144dp"
            android:layout_marginTop="13dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="供应标签"
                android:textColor="#999999"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/peoplemumber_supplytagLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/peoplemumber_addsupplyTag"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:background="@drawable/border1"
                        android:gravity="center"
                        android:text="添加"
                        android:textColor="#ffbe6c"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/peoplemumber_editsupplyTag"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/border2"
                        android:gravity="center"
                        android:text="编辑"
                        android:textColor="#7acdf9"
                        android:textSize="17sp" />
                </LinearLayout>

                <com.tongmeng.alliance.view.MyGridView
                    android:id="@+id/peoplemumber_supplyGridView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/peoplemumber_supplytagLayout"
                    android:layout_alignParentTop="true"
                    android:columnWidth="13dp"
                    android:numColumns="5" >
                </com.tongmeng.alliance.view.MyGridView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="59dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="签到码"
                android:textColor="#999999"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/peoplemumber_signcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:textColor="#222a32"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="59dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="是否签到"
                android:textColor="#999999"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/peoplemumber_issign"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#222a32"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>