<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#22292c" >

        <RelativeLayout
            android:id="@+id/quit_analysis_Rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="11dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/people_left_arrow"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/analysis_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="财务分析"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/finish_analysis_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:enabled="true"
            android:onClick="edit"
            android:padding="10dp"
            android:src="@drawable/edit" />
    </RelativeLayout>
    
     <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/find_project_ll_height"
        android:background="@color/find_project_white_bg"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/itemRg_financial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/areaRb_financial"
                style="@style/rb_financial_style"
                android:text="资产负债表" 
                />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/find_project_v_top_bot"
                android:layout_marginTop="@dimen/find_project_v_top_bot"
                android:background="@drawable/demand_find_project_dividing_line" />

            <RadioButton
                android:id="@+id/typeRb_financial"
                style="@style/rb_financial_style"
                android:text="现金流量表" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/find_project_v_top_bot"
                android:layout_marginTop="@dimen/find_project_v_top_bot"
                android:background="@drawable/demand_find_project_dividing_line" />

            <RadioButton
                android:id="@+id/vocationRb_financial"
                style="@style/rb_financial_style"
                android:text="利润表" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/find_project_v_top_bot"
                android:layout_marginTop="@dimen/find_project_v_top_bot"
                android:background="@drawable/demand_find_project_dividing_line" />

            <RadioButton
                android:id="@+id/priceRb_financial"
                style="@style/rb_financial_style"
                android:text="相关描述" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>