<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/flow_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/home_frg_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margain_left_15"
        android:layout_marginRight="@dimen/common_margain_right_15"
        android:layout_marginBottom="@dimen/common_margain_bottom_18"
        android:layout_marginTop="@dimen/common_margain_top_10"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/home_flow_item_head_LL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.tr.ui.widgets.CircleImageView
                android:id="@+id/flow_user_img_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_default_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/flow_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="付峰"
                        android:textColor="@color/text_flow_name"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/flow_source_power_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margain_left_13"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/text_flow_name"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margain_top_6"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12分钟前"
                        android:textColor="@color/text_flow_time"
                        android:textSize="@dimen/common_text_size_12" />

                    <TextView
                        android:id="@+id/addressTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margain_left_15"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="北京市·朝阳区科学院南里西奥中心"
                        android:textColor="@color/text_flow_more"
                        android:textSize="@dimen/common_text_size_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/common_margain_top_17"
            android:ellipsize="end"
            android:maxLines="3"
            android:lineSpacingExtra="3dp"
            android:text="有自己的兴趣爱好，并为之坚持，知道自己想要什么，保持积极向上生活态度，这也是一种“能力”。现实生活中，无数的人活在混沌中，浑浑噩噩，每天都是在重复，日子久了，会产生很深的消极、烦躁情绪"
            android:textColor="@color/text_flow_content"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/moreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/look_more_bg"
            android:text="查看更多"
            android:textColor="@color/text_flow_more"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/flowIv"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <com.tr.ui.widgets.NoScrollGridView
            android:id="@+id/flowGv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="@null" />

        <LinearLayout
            android:id="@+id/home_flow_figure_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/flow_share_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone" >

            <com.tr.ui.widgets.CircleImageView
                android:id="@+id/flow_figure_img_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_default_avatar" />

            <LinearLayout
                android:id="@+id/home_flow_figure_content_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/flow_figure_name_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#1a1a1a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/flow_figure_content_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#707070"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_flow_share_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/flow_share_bg"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/flow_published_img_iv"
                android:layout_width="63.5dp"
                android:layout_height="63.5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/hy_chat_right_pic" />

            <LinearLayout
                android:id="@+id/home_flow_published_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/flow_published_common_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/hy_input_title_text_color"
                    android:textSize="@dimen/text_size_m" />

                <TextView
                    android:id="@+id/flow_published_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/atperson_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margain_top_10"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/at_flow" />

            <TextView
                android:id="@+id/atpersonTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margain_left_14"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="金桐网;老铁;Matthew Goode"
                android:textColor="@color/text_flow_more"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margain_top_16"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/link_flow" />

            <TextView
                android:id="@+id/linkTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margain_left_14"
                android:text="人脉(4);组织(4);知识(2);事件(2)"
                android:textColor="@color/text_flow_more"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margain_top_16"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/topic_flow" />

            <TextView
                android:id="@+id/topicTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margain_left_14"
                android:text="融资 军事 局势 经济"
                android:textColor="@color/text_flow_more"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:id="@+id/mid_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/common_margain_top_20"
            android:background="#e6e6e6" />

        <LinearLayout
            android:id="@+id/home_flow_published_common_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margain_top_14"
            android:gravity="right" >

            <TextView
                android:id="@+id/yes_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/yes_flow"
                android:drawablePadding="@dimen/common_drawable_padding_7"
                android:gravity="center_vertical"
                android:text="5"
                android:textColor="@color/text_color"
                android:textSize="@dimen/commen_text_size_12" />

            <TextView
                android:id="@+id/comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margain_left_23"
                android:drawableLeft="@drawable/reply_style"
                android:drawablePadding="@dimen/common_drawable_padding_7"
                android:gravity="center_vertical"
                android:text="123"
                android:textColor="@color/text_color"
                android:textSize="@dimen/commen_text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_frg_flow_comment_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/common_margain_top_14"
            android:paddingBottom="@dimen/common_margain_top_4"
            android:paddingTop="@dimen/common_margain_top_4"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@color/project_bg" >

            <TextView
                android:id="@+id/yesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/common_margain_top_4"
                android:layout_marginBottom="@dimen/common_margain_bottom_4"
                android:textColor="@color/text_flow_more"
                android:textSize="@dimen/commen_text_size_12" />

            <com.tr.ui.widgets.NoScrollListview
                android:id="@+id/commentLv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@drawable/flow_bg"
                android:divider="@null"
                android:visibility="gone"
                android:scrollbars="@null" />

            <TextView
                android:id="@+id/commentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flow_bg"
                android:layout_marginTop="@dimen/common_margain_top_4"
                android:layout_marginBottom="@dimen/common_margain_bottom_4"
                android:text="全部评论"
                android:textColor="@color/text_flow_more"
                android:textSize="@dimen/commen_text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/project_bg" />

</LinearLayout>
