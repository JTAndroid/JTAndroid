<?xml version="1.0" encoding="utf-8"?>
<!-- create by roffee -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:background="@drawable/hy_shape_fillinfo_select_normal">
    <RelativeLayout 
        android:layout_width="match_parent"
   		android:layout_height="wrap_content">
        <EditText android:id="@+id/hy_layout_input_1line_add_edittext"
	       	android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:layout_alignParentLeft="true"
	   		android:layout_centerVertical="true"
	   		android:layout_toLeftOf="@+id/hy_layout_input_1line_add_rightIconBtn"
	   		android:layout_marginRight="4dp"
	   		android:layout_marginLeft="2dp"
	   		android:background="@null"
	   		android:gravity="center_vertical|left"
	   		android:textColor="#8d8d8d"
	   		android:textSize="16sp"
	   		android:singleLine="true"
	   		android:hint="自定义"
	   		android:textColorHint="#8d8d8d"
	   		android:imeOptions="actionNext"
	   		android:maxLength="12"/>
	    <ImageView android:id="@+id/hy_layout_input_1line_add_rightIconBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	   		android:layout_centerVertical="true"
	        android:background="@drawable/hy_selector_addbtn" 
	        android:clickable="true"/>
    </RelativeLayout>
</LinearLayout>

