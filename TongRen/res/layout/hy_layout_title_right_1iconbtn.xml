<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hy_title_height"
    android:background="@drawable/auth_title_back" >

    <!-- android:background="@color/hy_title_bg_color" -->

    <LinearLayout
        android:id="@+id/hy_layoutTitle_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="@dimen/hy_title_action_bar_to_side"
            android:background="@drawable/home_back" 
            />
<!--             android:background="@drawable/hy_selector_ic_action_back"  -->

    </LinearLayout>
        <TextView
            android:id="@+id/hy_layoutTitle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/hy_title"
            android:textColor="#1a1a1a"
            android:textSize="@dimen/hy_title_text_font" />

    <ImageView
        android:id="@+id/hy_layoutTitle_rightIconBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/hy_title_action_bar_to_side"
        android:background="@drawable/hy_selector_ic_action_search"
        android:clickable="true" />

    <ImageView
        android:id="@+id/hy_meeting_shadow"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@drawable/hy_meeting_shadow" />

</FrameLayout>