<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="输入密码(6~19位数字，字母或符号)"
        android:layout_centerVertical="true"
        android:paddingTop="12dp"
        android:paddingLeft="15dp"
        android:paddingBottom="12dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/commen_text_color_1"
        android:textColorHint="@color/commen_text_color_hint"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/view_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
         />

    <ImageView
        android:id="@+id/delete_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/view_password"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:src="@drawable/delete_input_content"
        android:visibility="invisible" />

</RelativeLayout>