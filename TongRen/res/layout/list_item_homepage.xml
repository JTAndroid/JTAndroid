<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_has"
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content" >

        <com.tr.ui.widgets.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_company" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/image_logo"
            android:orientation="vertical" >

            <!-- 学校名字/工作地方 -->

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="22dp"
                android:singleLine="true"
                android:textColor="@color/text_flow_content"
                android:textSize="@dimen/text_size_normal" />
            <!-- 时间段/ 专业/学位/工作职位等 -->

            <TextView
                android:id="@+id/text_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                 android:maxLines="1"
        	 android:ellipsize="end"
                android:textColor="@color/text_search_gray"
                android:textSize="@dimen/text_size_micro" />

            <TextView
                android:id="@+id/text_brief_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                 android:maxLines="3"
         		android:ellipsize="end"
                android:lineSpacingExtra ="4dp"
                android:paddingRight="6dp"
                android:textColor="@color/text_flow_content"
                android:textSize="@dimen/text_size_small" />
            <TextView
            android:id="@+id/see_moreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/look_more_bg"
            android:text="查看更多"
            android:visibility="gone"
            android:textColor="@color/text_flow_more"
            android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:text="@string/edit"
            android:textColor="@color/project_blue"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_isnull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/text_flow_content"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/commen_text_color_hint" /> -->

</LinearLayout>