<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3" />

    <!-- 说明文字 -->

    <TextView
        android:id="@+id/captionTv"
        style="@style/common_text_style_middle_black"
        android:text="请输入中国大陆手机号或常用邮箱，可用于登陆和找回密码，注册后全网可用"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 账号 -->

        <EditText
            android:id="@+id/accountEt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/common_text_style_large_black"
            android:background="@drawable/reg_input_bg"
            android:textCursorDrawable="@null"
            android:hint="手机号码/邮箱"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColorHint="@color/common_gray" />

        <!-- 密码 -->

        <EditText
            android:id="@+id/passwordEt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/common_text_style_large_black"
            android:layout_marginTop="15dp"
            android:background="@drawable/reg_vcode_input_bg"
            android:textCursorDrawable="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColorHint="@color/common_gray" />

        <!-- 验证码 -->

        <LinearLayout
            android:id="@+id/vcodeParentLl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 填写验证码 -->

            <EditText
                android:id="@+id/vcodeEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/common_text_style_large_black"
                android:background="@drawable/reg_vcode_input_bg"
                android:textCursorDrawable="@null"
                android:hint="验证码"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColorHint="@color/common_gray"/>
            <!-- 获取验证码 -->

            <TextView
                android:id="@+id/vcodeTv"
                style="@style/common_text_style_large_orange"
                android:layout_marginLeft="15dp"
                android:background="@drawable/reg_vcode_btn_bg"
                android:gravity="center"
                android:text="获取验证码" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7.0" />

    

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- 协议条款 -->
    <TextView
        android:id="@+id/agreementTv"
        style="@style/common_text_style_middle_gray"
        android:layout_gravity="center_horizontal"
        android:text="@string/des_agree_agreement" />
    
    <!-- 注册 -->

    <TextView
        android:id="@+id/registerTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/common_text_style_large_orange"
        android:layout_marginTop="20dp"
        android:background="@drawable/reg_btn_bg"
        android:gravity="center"
        android:text="注册"/>
    
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.2" />

</LinearLayout>