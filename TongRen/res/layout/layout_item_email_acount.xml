<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.tr.ui.widgets.AutoCompeleteEmailSuffixEditText
        android:id="@+id/accountEt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:hint="建议使用企业邮箱"
        android:paddingTop="12dp"
        android:paddingLeft="15dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:textColor="@color/commen_text_color_1"
        android:textColorHint="@color/commen_text_color_hint"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />
    
    <ImageView
        android:id="@+id/delelte_email_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:src="@drawable/delete_input_content"
        android:visibility="invisible" />

</RelativeLayout>