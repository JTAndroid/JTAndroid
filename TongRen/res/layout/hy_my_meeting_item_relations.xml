<?xml version="1.0" encoding="utf-8"?>
<!-- 20141103 zhang nian 
	 我的会议-关系列表项布局  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20px"
    android:background="#f9f9f9" >
	<RelativeLayout
        android:id="@+id/hy_myhy_relations_rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px" >
		<RelativeLayout
            android:id="@+id/hy_myhy_relations_rl_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px" >
	    	<ImageView
				android:id="@+id/hy_myhy_relations_im_logo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/meeting_notice_logo_a" />
    	</RelativeLayout>
		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="12px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hy_myhy_relations_rl_logo">
			<TextView
			    android:id="@+id/hy_myhy_tv_person_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:text="雷军"
			    android:textColor="#1f1f1f"
			    android:textSize="30px" />
			
			<TextView
			    android:id="@+id/hy_myhy_tv_person_desc"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="20px"
			    android:layout_centerVertical="true"
			    android:text="小米创办人、董事长兼CEO"
			    android:textColor="#8d8d8d"
			    android:textSize="24px" />
		</RelativeLayout>
	</RelativeLayout>
	<TextView
        android:id="@+id/hy_myhy_relations_tv_footer"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/hy_myhy_relations_rl_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="#e3e3e3" />
</RelativeLayout>