<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
		 <LinearLayout 
		    android:id="@+id/layout_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:padding="1.3dp"
		    android:gravity="center_vertical"
		    android:background="@drawable/relation_evaluationtag_bg_commen_shapes"
		    android:orientation="horizontal"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="14dp" >
		
		    <TextView
		        android:gravity="left"
		        android:id="@+id/contentTv"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingLeft="6dp"
		        android:text="天使投资人"
		        android:textColor="#5b5b5b"
		        android:textSize="14sp" />
		
		    <TextView
		        android:background="@drawable/relation_evaluation_count"
		        android:id="@+id/numberTv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="2"
		        android:gravity="center"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:text="32"
		        android:textColor="#FFA500"
		        android:textSize="14sp" />
             </LinearLayout>   
             <LinearLayout 
		    android:id="@+id/layout_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:padding="1.3dp"
		    android:gravity="center_vertical"
		    android:background="@drawable/relation_evaluationtag_bg_commen_shapes"
		    android:orientation="horizontal" >
		
		    <TextView
		        android:gravity="left"
		        android:id="@+id/contentTv"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingLeft="6dp"
		        android:text="产品"
		        android:textColor="#5b5b5b"
		        android:textSize="14sp" />
		
		    <TextView
		        android:background="@drawable/relation_evaluation_count"
		        android:id="@+id/numberTv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="2"
		        android:gravity="center"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:text="32"
		        android:textColor="#FFA500"
		        android:textSize="14sp" />
             </LinearLayout>
             <LinearLayout 
		    android:id="@+id/layout_3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:padding="1.3dp"
		    android:gravity="center_vertical"
		    android:background="@drawable/relation_evaluationtag_bg_commen_shapes"
		    android:orientation="horizontal" >
		
		    <TextView
		        android:gravity="left"
		        android:id="@+id/contentTv"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingLeft="6dp"
		        android:text="商品拓展"
		        android:textColor="#5b5b5b"
		        android:textSize="14sp" />
		
		    <TextView
		        android:background="@drawable/relation_evaluation_count"
		        android:id="@+id/numberTv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="2"
		        android:gravity="center"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:text="32"
		        android:textColor="#FFA500"
		        android:textSize="14sp" />
             </LinearLayout>
             <LinearLayout 
		    android:id="@+id/layout_4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:padding="1.3dp"
		    android:gravity="center_vertical"
		    android:background="@drawable/relation_evaluationtag_bg_commen_shapes"
		    android:orientation="horizontal" >
		
		    <TextView
		        android:gravity="left"
		        android:id="@+id/contentTv"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingLeft="6dp"
		        android:text="董事长"
		        android:textColor="#5b5b5b"
		        android:textSize="14sp" />
		
		    <TextView
		        android:background="@drawable/relation_evaluation_count"
		        android:id="@+id/numberTv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="2"
		        android:gravity="center"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:text="32"
		        android:textColor="#FFA500"
		        android:textSize="14sp" />
             </LinearLayout>
      
      <TextView
          android:layout_width="match_parent"
          android:layout_height="28dp"
          android:background="#ffffff"/>
      
      <TextView
          android:layout_width="match_parent"
          android:layout_height="0.1dp"
          android:background="#e3e3e3"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:background="#f4f4f4">		  

         <TextView
             android:id="@+id/evaluation_rl_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="查看评价人"
             android:textSize="12sp"
             android:textColor="#4d4d4d"
             android:layout_centerInParent="true"/>

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/arrow_down"
             android:layout_toRightOf="@id/evaluation_rl_tv"
             android:layout_marginLeft="8dp"
             android:layout_centerVertical="true"/>
      </RelativeLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#f0f0f0"/>
</LinearLayout>